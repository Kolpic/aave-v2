MNEMONIC=""
ALCHEMY_KEY=""
SEPOLIA_ALCHEMY_KEY=""

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================
# Set to 'localhost' for local testing or 'sepolia' for testnet
NETWORK=sepolia

# =============================================================================
# TOKEN CONFIGURATION
# =============================================================================
# Token settings (applies to both local and Sepolia)
TOKEN_NAME=USDT
TOKEN_SYMBOL=USDT
TOKEN_DECIMALS=6
TOKEN_MINT_AMOUNT=10000

# Supply amount (for supply-to-pool-configurable.ts)
TOKEN_SUPPLY_AMOUNT=500

# Borrow amount (for borrow-from-pool-configurable.ts)
TOKEN_BORROW_AMOUNT=20

# Repay amount (for repay-loan-configurable.ts)
# Set to 0 for full repayment, or specify partial amount
TOKEN_REPAY_AMOUNT=0

# Withdraw amount (for withdraw-from-pool-configurable.ts)
# Set to 0 for full withdrawal, or specify partial amount
TOKEN_WITHDRAW_AMOUNT=0

# Interest rate mode: 1 = stable (doesn't work use 2 only), 2 = variable
INTEREST_RATE_MODE=2

# Examples for other tokens:
# For USDC: TOKEN_NAME="USD Coin", TOKEN_SYMBOL=USDC, TOKEN_DECIMALS=6
# For WBTC: TOKEN_NAME="Wrapped Bitcoin", TOKEN_SYMBOL=WBTC, TOKEN_DECIMALS=8
# For WETH: TOKEN_NAME="Wrapped Ether", TOKEN_SYMBOL=WETH, TOKEN_DECIMALS=18

# =============================================================================
# LOCAL TESTING ADDRESSES (from test-local-deployment.ts output)
# =============================================================================
LOCAL_LENDING_POOL_ADDRESS=
LOCAL_DATA_PROVIDER_ADDRESS=
LOCAL_TOKEN_ADDRESS=

# =============================================================================
# SEPOLIA CONFIGURATION
# =============================================================================
# Network connection
RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_API_KEY
PRIVATE_KEY_USER1=your_private_key_here

# Sepolia Aave V2 addresses
SEPOLIA_LENDING_POOL_ADDRESS=
SEPOLIA_DATA_PROVIDER_ADDRESS=
SEPOLIA_TOKEN_ADDRESS=

# =============================================================================
# FALLBACK ADDRESSES (optional - used if LOCAL_* or SEPOLIA_* not set)
# =============================================================================
TOKEN_ADDRESS=
LENDING_POOL_ADDRESS=
DATA_PROVIDER_ADDRESS=

# =============================================================================
# SCRIPT SETTINGS
# =============================================================================
# Time delay (in seconds) - for local testing time manipulation
TIME_DELAY=604800  # 7 days